blocks:
  - type: layout
    path: grid/grid-dynamic
    class: {{class}}
    disableGap: row
    regions:
      - columns: 2
        class: hidden-phone span-1-tablet
      - columns: 4
        class: span-6-tablet span-8-desktop
        blocks:
          - type: container
            class: bg-color-neutral-100 m-stack-top-xl
            blocks:
              {{#if image}}
              - type: image
                images:
                  - path: {{image}}
                    {{#if imageWidth}}
                    width: {{imageWidth}}
                    {{/if}}
                    {{#if imageHeight}}
                    height: {{imageHeight}}
                    {{#if imageDescription}}
                    description: {{imageDescription}}{{else}}""{{/if}}                    
                    {{/if}}
              {{/if}}
          {{#if pageHeader}}
          - type: header
            class: h1 m-stack-top-md {{#if align}}{{align}}{{else}}text-center{{/if}}
            h1:
              - {{pageHeader}}
          {{/if}}
          - type: header
            class: h4 m-stack-top-sm {{#if align}}{{align}}{{else}}text-center{{/if}}
            h2:
              - {{moduleTime}}
          - type: container
            class: p-inset-lg
            blocks:
              {{#if pageDescription}}
              - type: text
                class: subtitle m-none {{#if align}}{{align}}{{else}}text-left{{/if}}
                items:
                  - description: {{pageDescription}}
                    description_class: m-stack-sm
                  {{#if pageDescription2}}
                  - description: {{pageDescription2}}
                    description_class: m-stack-sm
                  {{/if}}
                  {{#if pageDescription3}}
                  - description: {{pageDescription3}}
                    description_class: m-stack-sm
                  {{/if}}
                {{/if}}
          - type: container
            class: p-inset-stretch-xl m-stack-top-lg
            blocks:      
              - type: component
                path: partial/molecules/navigate
                class: m-none
                parameters:
                  direction: forward
                  button_class: btn-block bg-color-neutral-900 border-radius-rounded m-stack-md
                  text: explore
                  sr_text: explore